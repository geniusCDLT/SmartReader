<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_background_color"
    android:orientation="vertical">
    <ScrollView
        android:padding="@dimen/container_padding_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/border_radius"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/container_padding_size"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/big_avater_size"
                    android:layout_height="@dimen/big_avater_size"
                    android:src="@drawable/login_user"
                    android:id="@+id/user_avater" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/small_margin_size"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            style="@style/title_font_style"
                            android:id="@+id/username"/>
                        <TextView
                            android:id="@+id/sign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/icon_edit"
                        android:src="@drawable/icon_edit"
                        android:layout_width="@dimen/lg_img_size"
                        android:layout_height="@dimen/lg_img_size"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/container_padding_size"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius"
                android:gravity="center_vertical"
                android:padding="@dimen/container_padding_size">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_age"
                        style="@style/user_data"/>
                    <TextView
                        android:text="使用天数"
                        android:textAlignment="center"
                        style="@style/normal_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/favorite_count"
                        style="@style/user_data"/>
                    <TextView
                        android:text="收藏"
                        android:textAlignment="center"
                        style="@style/normal_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/play_record_count"
                        style="@style/user_data"/>
                    <TextView
                        android:text="观看记录"
                        android:textAlignment="center"
                        style="@style/normal_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/view_record_count"
                        style="@style/user_data"/>
                    <TextView
                        android:text="浏览记录"
                        android:textAlignment="center"
                        style="@style/normal_text_style"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/container_padding_size"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/border_radius"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="@dimen/container_padding_size"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/icon_play_record"
                            android:layout_marginRight="@dimen/mini_margin_size"
                            style="@style/md_icon_size_style"/>
                        <TextView
                            android:text="浏览记录"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <include layout="@layout/underline"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="@dimen/container_padding_size"
                    android:id="@+id/play_record_list"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/container_padding_size"
                android:layout_marginBottom="@dimen/container_padding_size"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/border_radius"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/container_padding_size"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            style="@style/md_icon_size_style"
                            android:src="@drawable/icon_collection"/>
                        <TextView
                            android:text="我的收藏"
                            style="@style/user_category_style"/>
                        <ImageView
                            style="@style/sm_icon_size_style"
                            android:src="@drawable/icon_arrow"/>
                    </LinearLayout>
                    <include layout="@layout/underline"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/container_padding_size"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            style="@style/md_icon_size_style"
                            android:src="@drawable/icon_record"/>
                        <TextView
                            style="@style/user_category_style"
                            android:text="浏览过" />
                        <ImageView
                            style="@style/sm_icon_size_style"
                            android:src="@drawable/icon_arrow"/>
                    </LinearLayout>
                    <include layout="@layout/underline"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>