<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="200dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/main_tv_rack_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/main_rack_logo"/>

        <TextView
                android:id="@+id/main_tv_rack_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="尚未分类（共3本）"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/cornflowerblue"
                android:textSize="16dp"/>
        <TextView
            android:id="@+id/main_tv_rack_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:focusable="false"
            android:text="编辑"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cornflowerblue"
            android:textSize="16dp"/>
    </LinearLayout>

    <com.example.smartreader.Activity.ui.HorizontalListView
            android:id="@+id/main_lv_rack"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            />

</LinearLayout>