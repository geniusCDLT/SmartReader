<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="155dp">
    <ImageView android:id="@+id/rl_iv_book_cover"
               android:layout_width="90dp"
               android:layout_height="135dp"
               android:layout_marginRight="10dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView android:id="@+id/rl_tv_book_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="女主对此感到厌烦"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:textColor="@color/nb.text.common_h1"
                  android:layout_marginBottom="16dp"
                  android:textSize="20dp"/>
        <TextView android:id="@+id/rl_tv_book_author"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="妚鹤"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:textColor="@color/nb.text.common_h1"
                  android:layout_marginBottom="16dp"
                  android:textSize="16dp"/>
        <TextView android:id="@+id/rl_tv_book_type"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="奇幻"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:textColor="@color/nb.text.common_h1"
                  android:layout_marginBottom="10dp"
                  android:textSize="13dp"/>
        <TextView android:id="@+id/rl_tv_book_desc"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="即使身处泥泞，她们也会站起来"
                  android:maxLines="1"
                  android:singleLine="true"
                  android:textColor="@color/nb.text.common_h1"
                  android:layout_marginBottom="10dp"
                  android:textSize="13dp"/>
    </LinearLayout>
</LinearLayout>