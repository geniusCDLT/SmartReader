<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmnet_bookself"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.fragment.BookshelfFragment"
    android:orientation="horizontal">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
           android:id="@+id/swi_lv"
           android:layout_width="match_parent"
           android:layout_height="match_parent"

           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <com.example.smartreader.Utils.MyListView
                   android:id="@+id/lv_list"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="bottom"
                   android:divider="@color/nb.widget.button.selected"
                   android:dividerHeight="5dp"></com.example.smartreader.Utils.MyListView>

           </LinearLayout>

       </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


   </LinearLayout>


</LinearLayout>