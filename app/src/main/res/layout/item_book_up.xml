<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_marginRight="@dimen/small_margin_size"
    android:orientation="vertical">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_book_loading"
        android:id="@+id/book_img"/>
<!--    app:riv_corner_radius="@dimen/sm_border_radius_size"-->
<!--    app:riv_oval="false"-->
    <TextView
        android:gravity="center"
        android:singleLine="true"
        android:id="@+id/book_name"
        android:layout_marginTop="@dimen/small_margin_size"
        android:text="女主对此感到厌烦"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</LinearLayout>